<h1>Price</h1>

<table class ="table table-sm table-light" >
  <thead class = "thead-light">
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Contains</th>
      <th>Cost</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
        
        <tr>
          <td><%= ingredient.name %></td>
          <td><%= ingredient.quantity %></td>
          <td><%= ingredient.completed %></td>
          <td><%= '$1.00' %> </td>
        </tr>
    <% end %>
        <tr class="table-warning">
        <td></td>
        <td></td>
        <td><strong>Total Cost: </strong></td>
        <td>$<%= @ingredients.sum(:quantity) %>.00</td>
        </tr>
  </tbody>
</table>

<%= link_to 'Back', ingredients_path, class: 'btn btn-danger' %>
<a href='thank' class = 'btn btn-success'>Pay</a>
